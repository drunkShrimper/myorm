<?xml version="1.0" encoding="UTF-8" ?>

<mapper namespace="com.frog.dao.EmployeeMapper">

    <select id="getEmpById" resultType="com.frog.bean.Employee">
        select * from employee where id = #{id}
    </select>

    <select id="getEmpByName" resultType="com.frog.bean.Employee">
        select * from employee where name = #{name}
    </select>

    <insert id="addEmp" parameterType="com.frog.bean.Employee">
        insert into employee(name) values(#{name})
    </insert>

    <update id="updateEmp">
        update employee set name=#{name} where id = #{id}
    </update>

    <delete id="deleteEmpById">
        delete from employee where id = #{id}
    </delete>
</mapper>